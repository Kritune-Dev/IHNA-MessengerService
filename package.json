{
  "name": "ihna_messengerservice",
  "version": "1.1.1",
  "description": "Allows to interact with the user through Facebook Messenger and the Facebook page \"IHNA - Idheo Helper\".",
  "main": "src/server.js",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:dev": "jest --detectOpenHandles --watchAll",
    "test:cov": "jest --coverage",
    "test": "jest --force-exit --detectOpenHandles",
    "serve": "nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "preversion": "git fetch --tags && npm run lint:check && npm test",
    "version": "npm run build",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "IHNA",
    "service",
    "messenger"
  ],
  "author": "Kritune",
  "license": "ISC",
  "devDependencies": {
    "codecov": "^3.8.1",
    "eslint": "^7.17.0",
    "jest": "^26.6.3",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.0.1"
  },
  "dependencies": {
    "@types/jest": "^26.0.20",
    "eslint-plugin-jest": "^24.1.3",
    "express": "^4.17.1",
    "i": "^0.3.6",
    "node-fetch": "^2.6.1",
    "pm2": "^4.5.1",
    "simple-git": "^2.31.0"
  }
}
